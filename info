import subprocess
import os

# Use base path relative to .exe or .py
base_path = os.path.dirname(os.path.abspath(__file__))
script_path = os.path.join(base_path, 'sample.py')

# Use python.exe directly from system or known venv
python_path = os.path.join(base_path, 'python', 'python.exe')  # Optional if shipping a portable Python

# Or just rely on system Python if available
subprocess.Popen(["python", "-m", "streamlit", "run", script_path])

input("Streamlit launched. Press Enter to exit...")