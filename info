app.py


import streamlit as st
from graphviz import Digraph
import sub_page1, sub_page2, sub_page3

st.set_page_config(layout="wide")
query_params = st.query_params
page = query_params.get("page", "ğŸ  Home")

st.sidebar.title("Go to")
selected = st.sidebar.radio("Navigation", ["ğŸ  Home", "ğŸ¤– GenAI", "âœï¸ Manual", "ğŸ“ˆ Dashboard"], index=["ğŸ  Home", "ğŸ¤– GenAI", "âœï¸ Manual", "ğŸ“ˆ Dashboard"].index(page))

if selected != page:
    st.query_params.page = selected
    st.rerun()

if page == "ğŸ¤– GenAI":
    sub_page1.show()
elif page == "âœï¸ Manual":
    sub_page2.show()
elif page == "ğŸ“ˆ Dashboard":
    sub_page3.show()
else:
    st.title("ğŸ§­ Flowchart Navigation")
    st.write("Click on a node below to navigate.")
    dot = Digraph()
    dot.node("Home", "ğŸ  Home", href="?page=ğŸ  Home")
    dot.node("GenAI", "ğŸ¤– GenAI", href="?page=ğŸ¤– GenAI")
    dot.node("Manual", "âœï¸ Manual", href="?page=âœï¸ Manual")
    dot.node("Dash", "ğŸ“ˆ Dashboard", href="?page=ğŸ“ˆ Dashboard")
    dot.edges([("Home", "GenAI"), ("Home", "Manual"), ("Home", "Dash")])
    st.graphviz_chart(dot)


