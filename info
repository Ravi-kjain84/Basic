let
    Source = Excel.CurrentWorkbook(){[Name="Table1"]}[Content],

    // Group rows by Department
    Grouped = Table.Group(
        Source,
        {"Department"},
        {
            {"Names", each Text.Combine([Name], ", " & "#(lf)"), type text},
            {"Email IDs", each Text.Combine([Email ID], ", " & "#(lf)"), type text}
        }
    )
in
    Grouped