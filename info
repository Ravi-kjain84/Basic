def merge_requirements_epic_details(test_evidence, test_cases_df):
    # Create mappings from test case ID to Requirement ID and EPIC ID
    tc_to_req_map = test_cases_df.set_index('Test Case ID')['Issues Key To Link'].to_dict()
    tc_to_epic_map = test_cases_df.set_index('Test Case ID')['EPIC LINK'].to_dict()

    for tc_id, data in test_evidence.items():
        test_info = data.get("Test Case Information", {})

        # Insert values in the required order
        updated_info = {
            "Test Case ID": test_info.get("Test Case ID", tc_id),
            "Scenario": test_info.get("Scenario", ""),
            "RequirementID": tc_to_req_map.get(tc_id, "UNKNOWN"),
            "EpicID": tc_to_epic_map.get(tc_id, "UNKNOWN"),
            "Result": test_info.get("Result", "")
        }

        test_evidence[tc_id]["Test Case Information"] = updated_info

    return test_evidence