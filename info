import subprocess
import sys
import os

# Dynamically resolve base directory
base_dir = getattr(sys, '_MEIPASS', os.path.dirname(os.path.abspath(__file__)))
script_path = os.path.join(base_dir, 'dashboard.py')

# Launch Streamlit using current Python interpreter
subprocess.Popen([sys.executable, "-m", "streamlit", "run", script_path])

# Keep window open
input("Streamlit launched. Press Enter to exit...")