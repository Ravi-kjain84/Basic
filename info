python -m venv venv
venv\Scripts\activate

pip install streamlit
pip install -r requirements.txt  # if you have other dependencies


import os
import sys
import subprocess

def main():
    base_dir = getattr(sys, '_MEIPASS', os.path.dirname(os.path.abspath(__file__)))
    script_path = os.path.join(base_dir, 'dashboard.py')
    subprocess.Popen([sys.executable, "-m", "streamlit", "run", script_path])
    input("Streamlit launched. Press Enter to exit...")

if __name__ == "__main__":
    main()


pyinstaller --onefile --noconsole launcher.py