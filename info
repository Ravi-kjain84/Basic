# Alternate merge (adding both RequirementID and EpicID)
def merge_requirements_epic_details(test_evidence, test_cases_df):
    # Create mapping for RequirementID and EpicID using 'Test Case ID' as index
    tc_to_req_map = test_cases_df.set_index('Test Case ID')['Issues Key To Link'].to_dict()
    tc_to_epic_map = test_cases_df.set_index('Test Case ID')['EPIC LINK'].to_dict()

    # Update test_evidence with both RequirementID and EpicID
    for tc_id in test_evidence:
        test_evidence[tc_id]['RequirementID'] = tc_to_req_map.get(tc_id, 'UNKNOWN')
        test_evidence[tc_id]['EpicID'] = tc_to_epic_map.get(tc_id, 'UNKNOWN')

    return test_evidence